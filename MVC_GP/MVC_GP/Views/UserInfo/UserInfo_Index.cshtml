@model List<MVC_GP.Models.UserInfo>
@{
    ViewBag.Title = ViewBag.Title;
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h1 class="text-center">@ViewBag.Title</h1>
                <hr />
                <form action="/UserInfo/UserInfo_Index" method="post" class="form-inline">
                    <div class="form-group">
                        <label class="control-label">用户名</label>
                        <input class="form-control" type="search" name="user_uname" value="@ViewBag.user_uname" />
                    </div>
                    <div class="form-group pull-right">
                        <input class="btn btn-info" type="submit" value="搜索" />
                        <a class="btn btn-success" href="/UserInfo/UserInfo_Edit">添加</a>
                    </div>
                </form>
                <hr />
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>用户编号</th>
                            <th>用户名</th>
                            <th>用户密码</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.user_uid</td>
                            <td>@item.user_uname</td>
                            <td>@item.user_password</td>
                            <td>
                                @Html.ActionLink("编辑", "UserInfo_Edit", new { id = item.user_uid }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("删除", "UserInfo_Delete", new { id = item.user_uid }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
