@model MVC_GP.Models.brands
@{
    ViewBag.Title = ViewBag.Title;
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                @if (string.IsNullOrEmpty(ViewBag.Erroy))
                {
                    <div class="alert alert-danger alert-dismissible fade show">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>错误!</strong> @ViewBag.Erroy
                    </div>
                }
                <h1 class="text-center">@ViewBag.Title</h1>
                <hr />
                <form autocomplete="off" action="/brands/Brands_Edit" method="post">
                    <div class="form-group">
                        <label class="control-label">编号：</label>
                        <input class="form-control" type="number" disabled name="brand_id" value="@Model.brand_id" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">品牌名称：</label>
                        <input class="form-control" type="text" name="brand_name" value="@Model.brand_name" />
                    </div> 
                <input type="hidden" disabled name="brand_id" value="@Model.brand_id" />
                <input class="btn btn-success" type="submit" value="保存" />
                <a class="btn btn-danger" href="/brands/Brands_Index">返回</a>
                </form>
            </div>
        </div>
    </div>
