@model List<MVC_GP.Models.Hot>
@{
    ViewBag.Title = ViewBag.Title;
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h1 class="text-center">@ViewBag.Title</h1>
                <hr />
                <form action="/Hot/Hot_Index" method="post" class="form-inline">
                    <div class="form-group">
                        <label class="control-label">搜索文字</label>
                        <input class="form-control" type="search" name="imgtext" value="@ViewBag.imgtext" />
                    </div>
                    <div class="form-group pull-right">
                        <input class="btn btn-info" type="submit" value="搜索" />
                        <a class="btn btn-success" href="/Hot/Hot_Edit">添加</a>
                    </div>
                </form>
                <hr />
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>编号</th>
                            <th>标题</th>
                            <th>名称</th>
                            <th>描述文字</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.rid</td>
                            <td>@item.Title</td>
                            <td>@item.imgurl</td>
                            <td>@item.imgtext</td>
                            <td>
                                @Html.ActionLink("编辑", "Hot_Edit", new { id = item.rid }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("删除", "Hot_Delete", new { id = item.rid }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>