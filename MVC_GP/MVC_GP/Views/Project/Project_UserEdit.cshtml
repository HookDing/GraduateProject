@model MVC_GP.Models.UserInfo
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Soures/css/Project_Home.css">
    <meta charset="utf-8" />
    <title>@ViewBag.Title -CAC电脑装机小屋</title>
    <script type="text/javascript">
        $(function () {
        //登录状态
            if (@ViewBag.UserID != 0) {
                $("#LogAndReg").hide();
                $("#myAcount").show();
            }
            else {
                $("#LogAndReg").show();
                $("#myAcount").hide();
            }
            $("#myScrollspy").scrollspy();
            //消息
                var msg ='@TempData["msg"]';
            if (msg != "") {
                window.alert(msg);
            }
        });
    </script>
</head>
<body class="bg-gray-blue">


    <!-- 导航 -->
    @Html.Partial("Navbar")

    <div class="clearfix"><br><br><br></div>


    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1 class="text-center">@ViewBag.Title</h1>
                <hr />
                <form action="/Project/Project_UserEdit" method="post">
                    <div class="form-group">
                        <label class="control-label">编号</label>
                        <input class="form-control" type="number" disabled name="user_uid" value="@Model.user_uid" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">用户名</label>
                        <input class="form-control" type="text" name="user_uname" value="@Model.user_uname" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">密码</label>
                        <input class="form-control" type="text" name="user_password" value="@Model.user_password" />
                    </div>
                    <input type="hidden" name="user_uid" value="@Model.user_uid" />
                    <input class="btn btn-success" type="submit" value="保存" />
                    <a class="btn btn-danger" href="/Project/Project_UserDetail">返回</a>
                </form>
            </div>
        </div>
    </div>
    <!-- container -->
    <!-- /.登录与注册窗口 -->
    @Html.Partial("Regist")
    @Html.Partial("Login")
    <script type="text/javascript" src="~/Scripts/Project_Home.js"></script>
</body>
</html>

@Html.Partial("Footer")