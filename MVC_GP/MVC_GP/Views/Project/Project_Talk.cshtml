@model List<MVC_GP.Models.Talk>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Soures/css/Project_Home.css">
    <meta charset="utf-8" />
    <title>@ViewBag.Title -CAC电脑装机小屋</title>
    <script type="text/javascript">
        $(function () {
        //登录状态
            if (@ViewBag.UserID != 0) {
                $("#LogAndReg").hide();
                $("#myAcount").show();
            }
            else {
                $("#LogAndReg").show();
                $("#myAcount").hide();
            }
            $("#myScrollspy").scrollspy();
            //消息
                var msg ='@TempData["msg"]';
            if (msg != "") {
                window.alert(msg);
            }
        });
    </script>
</head>
<body class="bg-gray-blue">


    <!-- 导航 -->
    @Html.Partial("Navbar")

    <div class="clearfix"><br><br><br></div>


    <div class="container">
        <h1 class="text-center">@ViewBag.Title</h1>
        <div class="row">
            <div class="col-md-8 col-md-offset-2" style="min-height:500px;">
                <div class="col-md-3 h3">标题</div>
                <div class="col-md-9 h3">内容</div>
                @foreach (var item in Model)
                {
                    <div class="col-md-3 text-center h4">@item.talk_title</div>
                    <div class="col-md-9 h4">@item.talk_content</div>
                    <hr />

                }
            </div>
            <div class="col-md-8 col-md-offset-2">
                <form action="/Project/Project_Talk" method="post" class="form-inline">
                    <div class="form-group">
                        <input type="hidden" name="name" value="@ViewBag.UserID" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="talk_title" placeholder="标题" value="" />
                        <input class="form-control" type="text" name="talk_content" placeholder="内容" value="" />
                        <input class="btn btn-success" type="submit" value="发表" />
                    </div>
                </form>
            </div>
        </div>
        <!-- row -->
        <!-- container -->
    </div>
    <!-- /.container -->
    <!-- /.登录与注册窗口 -->
    @Html.Partial("Regist")
    @Html.Partial("Login")
    <script type="text/javascript" src="~/Scripts/Project_Home.js"></script>
</body>
</html>

@Html.Partial("Footer")