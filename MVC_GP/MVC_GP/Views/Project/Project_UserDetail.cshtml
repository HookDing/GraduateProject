@model MVC_GP.Models.UserInfo
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Soures/css/Project_Home.css">
    <meta charset="utf-8" />
    <title>@ViewBag.Title -CAC电脑装机小屋</title>
    <script type="text/javascript">
        $(function () {
        //登录状态
            if (@ViewBag.UserID != 0) {
                $("#LogAndReg").hide();
                $("#myAcount").show();
            }
            else {
                $("#LogAndReg").show();
                $("#myAcount").hide();
            }
            $("#myScrollspy").scrollspy();
            //消息
                var msg ='@TempData["msg"]';
            if (msg != "") {
                window.alert(msg);
            }
        });
    </script>
</head>
<body class="bg-gray-blue">


    <!-- 导航 -->
    @Html.Partial("Navbar")

    <div class="clearfix"><br><br><br></div>


    <div class="container">
        <h1 class="text-center">@ViewBag.Title</h1>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6">
                    <h2 class="text-center">用户名：@Model.user_uname</h2>
                </div>
                <div class="col-md-6">
                    <ul style="list-style-type:none;">
                        <li><a href="/Project/Project_User_Edit?id+@Model.user_uid">编辑我的个人信息</a></li>
                        <li>注册时间：2022-05-05</li>
                        <li>绑定手机：123****4321</li>
                        <li>
                        绑定第三方登录：
                            <span style="width:30px;height:40px;"><img src="~/Soures/png/qq.png" /></span>
                            <span style="width:30px;height:40px;"><img src="~/Soures/png/wx.png" /></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- row -->
    </div>
    <!-- container -->
    <!-- /.登录与注册窗口 -->
    @Html.Partial("Regist")
    @Html.Partial("Login")
    <script type="text/javascript" src="~/Scripts/Project_Home.js"></script>
</body>
</html>

@Html.Partial("Footer")