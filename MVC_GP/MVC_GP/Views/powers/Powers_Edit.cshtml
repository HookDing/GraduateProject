@model MVC_GP.Models.powers
@{
    ViewBag.Title = ViewBag.Title;
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1 class="text-center">@ViewBag.Title</h1>
                <hr />
                <form action="/powers/Powers_Edit" method="post">
                    <div class="form-group">
                        <label class="control-label">电源编号</label>
                        <input class="form-control" type="text" name="powers_id" value="@Model.powers_id" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">电源品牌</label>
                        @Html.DropDownList("powers_brands", null, "--请选择--", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">电源负载</label>
                        <input class="form-control" type="number" name="powers_warts" value="@Model.powers_warts" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">电源尺寸</label>
                        <input class="form-control" type="text" name="powers_size" value="@Model.powers_size" />
                    </div>
                    <input class="btn btn-success" type="submit" value="保存" />
                    <a class="btn btn-danger" href="/powers/Powers_Index">返回</a>
                </form>
            </div>
        </div>
    </div>