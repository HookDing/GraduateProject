@model MVC_GP.Models.mem
@{
    ViewBag.Title = ViewBag.Title;
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1 class="text-center">@ViewBag.Title</h1>
                <hr />
                <form action="/mem/Mem_Edit" method="post">
                    <div class="form-group">
                        <label class="control-label">内存编号</label>
                        <input class="form-control" type="text" name="mem_id" value="@Model.mem_id" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">内存品牌</label>
                        @Html.DropDownList("mem_brand_id", null, "", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">内存频率</label>
                        <input class="form-control" type="text" name="mem_frenquence" value="@Model.mem_frenquence" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">内存容量</label>
                        <input class="form-control" type="text" name="mem_capacity" value="@Model.mem_capacity" />
                    </div>
                    <input class="btn btn-success" type="submit" value="保存" />
                    <a class="btn btn-danger" href="/mem/Mem_Index">返回</a>
                </form>
            </div>
        </div>
    </div>
