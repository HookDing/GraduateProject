@model MVC_GP.Models.Hot
@{
    ViewBag.Title = ViewBag.Title;
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1 class="text-center">@ViewBag.Title</h1>
                <hr />
                <form action="/Hot/Hot_Edit" method="post">
                    <div class="form-group">
                        <label class="control-label">编号</label>
                        <input class="form-control" type="number" disabled name="rid" value="@Model.rid" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">标题</label>
                        <input class="form-control" type="text" name="Title" value="@Model.Title" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">图片名称</label>
                        <input class="form-control" type="text" name="imgurl" value="@Model.imgurl" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">描述文字</label>
                        <input class="form-control" type="text" name="imgtext" value="@Model.imgtext" />
                    </div>
                    <input type="hidden" name="rid" value="@Model.rid" />
                    <input class="btn btn-success" type="submit" value="保存" />
                    <a class="btn btn-danger" href="/Hot/Hot_Index">返回</a>
                </form>
            </div>
        </div>
    </div>
