@model List<MVC_GP.Models.Talk>
@{
    ViewBag.Title = ViewBag.Title;
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h1 class="text-center">@ViewBag.Title</h1>
                <hr />
                <form action="/Talk/Talk_Index" method="post" class="form-inline">
                    <div class="form-group">
                        <label class="control-label">用户</label>
                        @Html.DropDownList("user_uid", null, "全部", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">内容</label>
                        <input class="form-control" type="search" name="talk_content" value="@ViewBag.talk_content" />
                    </div>
                    <div class="form-group pull-right">
                        <input class="btn btn-info" type="submit" value="搜索" />
                        <a class="btn btn-success" href="/Talk/Talk_Edit">添加</a>
                    </div>
                </form>
                <hr />
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>编号</th>
                            <th>用户</th>
                            <th>标题</th>
                            <th>内容</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.talk_tid</td>
                            <td>@item.UserInfo.user_uname</td>
                            <td>@item.talk_title</td>
                            <td>@item.talk_content</td>
                            <td>
                                @Html.ActionLink("编辑", "Talk_Edit", new { id = item.talk_tid }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("删除", "Talk_Delete", new { id = item.talk_tid }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
