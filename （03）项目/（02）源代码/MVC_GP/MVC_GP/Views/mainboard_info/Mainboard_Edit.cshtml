
@{
    ViewBag.Title = ViewBag.Title;
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

@model MVC_GP.Models.mainboard_info
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1 class="text-center">@Html.Raw(@ViewBag.Title)</h1>
            <hr />
            <form action="/mainboard_info/Mainboard_Edit" method="post">
                <div class="form-group">
                    <label class="control-label">主板编号</label>
                    <input class="form-control" type="text" name="name" value="@Model.mainboard_id" />
                </div>
                <div class="form-group">
                    <label class="control-label">主板名称</label>
                    <input class="form-control" type="text" name="name" value="@Model.mainboard_name" />
                </div>
                <div class="form-group">
                    <label class="control-label">主板板型</label>
                    <input class="form-control" type="text" name="name" value="@Model.mainboard_sizeType" />
                </div>
                <div class="form-group">
                    <label class="control-label">处理器接口</label>
                    @Html.DropDownList("mainboard_sockets_id", null, "--请选择--", new { @class = "form-control" })
                </div>
                <input class="btn btn-success" type="submit" value="保存" />
                <a class="btn btn-danger" href="/mainboard_info/Mainboard_Index">返回</a>
            </form>
        </div>
    </div>
</div>
